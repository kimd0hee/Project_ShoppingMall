<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="board">

	<select id="boardList" resultType="com.board.dto.boardVO">
		SELECT cs_id,cs_title,cs_context,cs_writer,cs_date FROM cscenter ORDER BY cs_id desc,cs_date desc
	</select>
	
	<insert id="boardInsert">
		INSERT INTO cscenter (cs_title,cs_context,cs_writer)VALUES(#{cs_title},#{cs_context},#{cs_writer})
	</insert>
	
	<select id="boardView" resultType="com.board.dto.boardVO">
		SELECT * FROM cscenter WHERE cs_id = #{cs_id} 
	</select>
	
	<update id="boardUpdate"> 
		UPDATE cscenter SET cs_title = #{cs_title},cs_context = #{cs_context},cs_writer = #{cs_writer} WHERE cs_id = #{cs_id} 
	</update>
	
	<delete id="boardDelete"> 
		DELETE FROM cscenter WHERE cs_id = #{cs_id} 
	</delete>

</mapper>

